{
  "name": "drillsargeant",
  "version": "1.0.0",
  "description": "Interactive code review and improvement platform for production readiness assessment",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd src/frontend && npm start",
    "dev:backend": "cd src/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd src/frontend && npm test",
    "test:backend": "cd src/backend && npm test",
    "install:all": "npm install && cd src/frontend && npm install && cd ../backend && npm install",
    "setup": "npm run install:all && npm run setup:firebase",
    "setup:firebase": "node scripts/setup-firebase.js"
  },
  "keywords": [
    "code-review",
    "production-readiness",
    "security-assessment",
    "performance-analysis",
    "interactive-learning"
  ],
  "author": "DrillSargeant Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/drillsargeant.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/drillsargeant/issues"
  },
  "homepage": "https://drillsargeant.com"
} 