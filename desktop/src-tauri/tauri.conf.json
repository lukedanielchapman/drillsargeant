{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DrillSargeant",
  "version": "1.0.0",
  "identifier": "com.drillsargeant.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DrillSargeant - Professional Code Analysis",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "maximized": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "DrillSargeant Team",
    "copyright": "Â© 2025 DrillSargeant. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Professional code analysis and quality assurance tool",
    "longDescription": "DrillSargeant Desktop provides comprehensive code analysis, security scanning, performance optimization, and quality assurance for software development projects with unlimited file system access and real-time monitoring."
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "dialog": {
      "open": {
        "directory": true,
        "multiple": false,
        "filters": [
          {
            "name": "All Files",
            "extensions": ["*"]
          }
        ]
      }
    },
    "notification": {},
    "shell": {
      "scope": [
        {
          "name": "git",
          "cmd": "git",
          "args": ["status", "log", "--oneline", "-10"]
        },
        {
          "name": "npm",
          "cmd": "npm",
          "args": ["list", "--depth=0"]
        }
      ]
    }
  }
}
